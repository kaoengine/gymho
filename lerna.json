{
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "packages/*",
    "src/*",
    "packages/pwa/*"
  ],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "version": {
        "allowBranch": [
          "main",
          "feature/*"
        ]
      },
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}