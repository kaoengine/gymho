{
  "version": "independent",
  "npmClient": "npm",
  "packages": [
    "libs/*",
    "src/*"
  ],
  "command": {
    "publish": {
      "version": {
        "allowBranch": [
          "main",
          "feature/*"
        ]
      },
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "changelog": {
    "ignoreCommitters": [
      "allcontributors"
    ],
    "labels": {
      "enhancement": ":rocket: New Feature",
      "core": ":earth_asia: Core",
      "bug": ":bug: Bug Fix"
    }
  }
}